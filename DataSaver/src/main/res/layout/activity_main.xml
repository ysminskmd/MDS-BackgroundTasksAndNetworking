<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shad.datasaver.MainActivity">

    <Button
        android:id="@+id/getDataSaverDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get DataSaver data"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <Button
        android:id="@+id/requestWhitelistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request whitelist"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getDataSaverDataBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
